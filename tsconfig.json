{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "ES6",
        "jsx": "react",
        "resolveJsonModule": true,
        "baseUrl": "./src/",
        "strictNullChecks": true
    },
    "include": ["src/**/*", "./src/declaration.d.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}